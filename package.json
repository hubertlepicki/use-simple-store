{
    "name": "use-simple-store",
    "description": "A really simple global state management using react hooks.",
    "version": "0.0.3",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "https://github.com/skt-t1-byungi/use-simple-store",
    "author": "skt-t1-byungi <tiniwz@gmail.com>",
    "keywords": [
        "react",
        "hook",
        "hooks",
        "state",
        "store"
    ],
    "license": "MIT",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "ava",
        "build": "rm -rf dist && tsc",
        "bench": "ts-node bench/run.ts > bench/result.txt && cat bench/result.txt",
        "prepublishOnly": "npm run test && npm run build"
    },
    "devDependencies": {
        "@types/jsdom": "^12.2.3",
        "@types/lodash.range": "^3.2.6",
        "@types/react": "^16.8.8",
        "ava": "^1.3.1",
        "browser-env": "^3.2.6",
        "husky": "^1.3.1",
        "lodash.range": "^3.2.0",
        "nanobench": "^2.1.1",
        "react": "^16.8.4",
        "react-dom": "^16.8.4",
        "react-hooks-testing-library": "^0.3.6",
        "ts-node": "^8.0.3",
        "tslint": "^5.13.1",
        "tslint-config-byungi": "^0.1.1",
        "typescript": "^3.3.3333"
    },
    "peerDependencies": {
        "react": "^16.8.4"
    },
    "dependencies": {
        "fast-deep-equal": "^2.0.1",
        "immer": "^2.1.2"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run bench && git commit -am bench"
        }
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
